<h1>
  <strong>Editing Book</strong>
</h1>

<div class="notice">
<% if @book.errors.any? %>

 <div clsss="error-message">
  <%= @book.errors.count %> error prohibited this book from being saved:
 </div>

 <div id="update-message">
  <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
 </div>

<% end %>
</div>


<div class="edit-form">
<%= form_with model: @book do |f| %>
<div class="field">
 <h4>Title</h4>
 <%= f.text_field :title %>
</div>

<div class="area">
 <h4>Body</h4>
 <%= f.text_area :body %>
</div>

<div class="actions">
 <%= f.submit 'Update Book' %>
</div>

 <p>
 <%= link_to "Show", book_path(@book.id) %>
 |
 <%= link_to "Back", "/books" %>
</p>

<% end %>
</div>
