<h1>Books</h1>
<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <a href="/books/show">Show</a>
        <a href="/books/edit">Edit</a>
        <a href="/books/index">Destroy</a>
      </td>
    </tr>
  </tbody>
</table>

<% end %>

